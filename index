    <footer class="relative py-24 text-center border-t border-white/5 z-10 overflow-hidden bg-black/40">
        <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(var(--neon-green) 1px, transparent 1px), linear-gradient(90deg, var(--neon-green) 1px, transparent 1px); background-size: 40px 40px;"></div>
        <div class="max-w-7xl mx-auto px-10 flex flex-col items-center gap-10">
            <div class="flex items-center gap-16 opacity-60 grayscale hover:grayscale-0 transition-all duration-700">
                <div class="flex flex-col items-center">
                    <span class="text-[9px] mono uppercase tracking-[0.5em] mb-2 text-slate-500 text-nowrap">Project_State</span>
                    <span class="text-[11px] mono text-emerald-400 font-black uppercase tracking-widest text-nowrap">Mission_Critical</span>
                </div>
                <div class="w-px h-10 bg-white/10"></div>
                <div class="flex flex-col items-center">
                    <span class="text-[9px] mono uppercase tracking-[0.5em] mb-2 text-slate-500 text-nowrap">Version_ID</span>
                    <span class="text-[11px] mono text-white font-black uppercase tracking-widest text-nowrap">v2.0.26_STABLE</span>
                </div>
            </div>
            
            <div class="flex flex-col gap-4 text-center">
                <p class="text-white text-3xl font-black tracking-[0.6em] uppercase text-nowrap">India Food Court</p>
                <div class="flex items-center justify-center gap-6">
                    <span class="h-px w-12 bg-emerald-500/30"></span>
                    <p class="text-emerald-500/80 text-[11px] mono uppercase tracking-[1em] font-bold text-nowrap">Architect: Aniket Verma</p>
                    <span class="h-px w-12 bg-emerald-500/30"></span>
                </div>
            </div>
            
            <p class="text-slate-600 text-[10px] mono uppercase tracking-[1.4em] opacity-40 text-nowrap">Gurugram // Phase_Trial_Run // 2026</p>
        </div>
    </footer>

    <script>
        const canvas = document.getElementById('starfield');
        const ctx = canvas.getContext('2d');
        const soundBtn = document.getElementById('sound-btn');
        const initiateBtn = document.getElementById('initiate-btn');
        const teamNodesSection = document.getElementById('team-nodes');
        const modal = document.getElementById('protocol-modal');
        const modalContainer = document.getElementById('modal-container');
        const modalTitle = document.getElementById('modal-phase-title');
        const modalSubLabel = document.getElementById('modal-sub-label');
        const muteLines = [document.getElementById('mute-line'), document.getElementById('mute-line-2')];

        // --- TABS LOGIC ---
        let currentActiveTabIndex = 0;
        const syncData = [
            { title: "THE FRESH START", time: "12:00 PM", status: "READY_FOR_UPLINK", desc: "Mid-day cycle optimization and node readiness validation Required for 12:00 PM Cycle." },
            { title: "THE PEAK HOUR", time: "06:00 PM", status: "LOAD_BALANCING_ACTIVE", desc: "Peak performance synchronization and ground operational load distribution." },
            { title: "THE CLOSING", time: "10:00 PM", status: "REPORTING_PHASE", desc: "Final day cycle reporting and secure operational transition protocol." },
            { title: "THE FEEDBACK", time: "ANYTIME", status: "CONTINUOUS_MONITORING", desc: "Ad-hoc guest insight collection and immediate operational feedback loop." }
        ];

        function switchTab(index) {
            currentActiveTabIndex = index;
            const btns = document.querySelectorAll('.tab-btn');
            btns.forEach(b => b.classList.remove('active'));
            btns[index].classList.add('active');

            const title = document.getElementById('sync-title');
            const desc = document.getElementById('sync-desc');
            const status = document.getElementById('sync-status');
            const execBtn = document.getElementById('execute-btn');
            
            title.innerText = syncData[index].title;
            desc.innerText = syncData[index].desc;
            status.innerText = `NODE_STATUS: ${syncData[index].status}`;

            if (index === 1) { // Peak Hour Amber
                execBtn.style.color = '#fbbf24'; execBtn.style.borderColor = 'rgba(245, 158, 11, 0.4)';
                status.style.color = '#fbbf24';
            } else {
                execBtn.style.color = '#10b981'; execBtn.style.borderColor = 'rgba(16, 185, 129, 0.4)';
                status.style.color = '#10b981';
            }
        }

        function handleExecuteSync() {
            const check1Title = document.querySelector('.check-title-1');
            const check1Desc = document.querySelector('.check-desc-1');
            const check2Title = document.querySelector('.check-title-2');
            const check2Desc = document.querySelector('.check-desc-2');
            const iconBgs = document.querySelectorAll('.protocol-icon-bg');
            const icons1 = document.querySelector('.protocol-icon-1');
            const icons2 = document.querySelector('.protocol-icon-2');

            if (currentActiveTabIndex === 0) { // The Fresh Start
                modalTitle.innerText = "THE FRESH START";
                modalTitle.className = "text-4xl font-black uppercase tracking-tight";
                modalSubLabel.innerText = "Protocol_Selection_Alpha";
                modalSubLabel.style.color = "#10b981";
                modalContainer.style.borderColor = "rgba(16, 185, 129, 0.3)";
                check1Title.innerText = "Production CHECK";
                check1Desc.innerText = "Verify kitchen readiness & output specs";
                check2Title.innerText = "Stall CHECK";
                check2Desc.innerText = "Audit individual vendor modules";
                iconBgs.forEach(bg => bg.style.backgroundColor = "rgba(16, 185, 129, 0.1)");
                icons1.style.stroke = "#10b981"; icons2.style.stroke = "#10b981";
                modal.classList.add('active');
            } else if (currentActiveTabIndex === 1) { // The Peak Hour
                modalTitle.innerText = "THE PEAK HOUR";
                modalTitle.className = "text-4xl font-black uppercase tracking-tight text-amber-500";
                modalSubLabel.innerText = "Protocol_Intensity_High";
                modalSubLabel.style.color = "#f59e0b";
                modalContainer.style.borderColor = "rgba(245, 158, 11, 0.3)";
                check1Title.innerText = "Production CHECK";
                check1Desc.innerText = "Monitor throughput & order velocity";
                check2Title.innerText = "Stall CHECK";
                check2Desc.innerText = "Real-time traffic & queue management";
                iconBgs.forEach(bg => bg.style.backgroundColor = "rgba(245, 158, 11, 0.1)");
                icons1.style.stroke = "#f59e0b"; icons2.style.stroke = "#f59e0b";
                modal.classList.add('active');
            } else {
                const status = document.getElementById('sync-status');
                status.innerText = "NODE_STATUS: COLLECTION_INITIALIZED...";
                setTimeout(() => status.innerText = `NODE_STATUS: ${syncData[currentActiveTabIndex].status}`, 2000);
            }
        }

        function closeModal() { modal.classList.remove('active'); }
        window.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal(); });

        // --- TIME HUD ---
        function updateHUDTime() {
            const now = new Date();
            const hud = document.getElementById('current-time-hud');
            if(hud) hud.innerText = now.toLocaleTimeString('en-GB', { hour12: false });
        }
        setInterval(updateHUDTime, 1000); updateHUDTime();

        // --- AUDIO ENGINE ---
        const audio = new Audio('https://assets.mixkit.co/music/preview/mixkit-indian-percussion-rhythm-loop-302.mp3');
        audio.loop = true; audio.volume = 0.2; let isPlaying = false;
        function toggleAudio() {
            if (isPlaying) { audio.pause(); muteLines.forEach(l => l.style.display = 'block'); } 
            else { audio.play().catch(e => {}); muteLines.forEach(l => l.style.display = 'none'); }
            isPlaying = !isPlaying;
        }
        soundBtn.addEventListener('click', toggleAudio);
        initiateBtn.addEventListener('click', () => {
            if(!isPlaying) toggleAudio();
            initiateBtn.innerHTML = "<span class='mono text-xs uppercase tracking-widest'>Protocol_Live...</span>";
            initiateBtn.classList.replace('bg-emerald-600', 'bg-emerald-500');
            teamNodesSection.scrollIntoView({ behavior: 'smooth' });
        });

        // --- STARFIELD ---
        let width, height, stars = []; const starCount = 200;
        class Star {
            constructor() { this.reset(); }
            reset() {
                this.z = Math.random() * 2 + 0.5;
                this.radius = Math.random() * Math.min(width, height) * 1.1 + 50;
                this.angle = Math.random() * Math.PI * 2;
                this.angularVelocity = (Math.random() * 0.0003 + 0.0001) * (this.z) * (Math.random() > 0.5 ? 1 : -1);
                this.size = this.z * 0.6; this.opacity = (Math.random() * 0.3 + 0.1) * (this.z / 2);
            }
            update() { this.angle += this.angularVelocity; }
            draw() {
                const x = (width/2) + Math.cos(this.angle) * this.radius;
                const y = (height/2) + Math.sin(this.angle) * this.radius;
                ctx.fillStyle = `rgba(255, 255, 255, ${this.opacity})`;
                ctx.beginPath(); ctx.arc(x, y, this.size, 0, Math.PI * 2); ctx.fill();
            }
        }
        function init() {
            const dpr = window.devicePixelRatio || 1;
            width = window.innerWidth; height = window.innerHeight;
            canvas.width = width * dpr; canvas.height = height * dpr;
            canvas.style.width = width + 'px'; canvas.style.height = height + 'px';
            ctx.scale(dpr, dpr); stars = [];
            for (let i = 0; i < starCount; i++) stars.push(new Star());
        }
        let currentIdx = 0;
        const carousel = document.getElementById('dash-carousel');
        function updateCarousel() {
            const items = document.querySelectorAll('.carousel-item');
            items.forEach((item, idx) => {
                item.classList.toggle('active', idx === currentIdx);
                item.classList.toggle('inactive', idx !== currentIdx);
            });
            carousel.style.transform = `translate3d(0, -${currentIdx * 136}px, 0)`;
        }
        setInterval(() => { currentIdx = (currentIdx + 1) % 5; updateCarousel(); }, 4000); updateCarousel();
        let targetX = 0, targetY = 0, curX = 0, curY = 0;
        window.addEventListener('mousemove', (e) => {
            targetX = (e.clientX - width/2) / (width/2); targetY = (e.clientY - height/2) / (height/2);
        });
        function animate() {
            curX += (targetX - curX) * 0.05; curY += (targetY - curY) * 0.05;
            ctx.clearRect(0, 0, width, height); stars.forEach(star => { star.update(); star.draw(); });
            const neb1 = document.getElementById('neb-1'); const neb2 = document.getElementById('neb-2');
            if(neb1) neb1.style.transform = `translate3d(${curX * 25}px, ${curY * 25}px, 0) scale(1.1)`;
            if(neb2) neb2.style.transform = `translate3d(${-curX * 40}px, ${-curY * 40}px, 0) scale(1.05)`;
            requestAnimationFrame(animate);
        }
        window.addEventListener('resize', init); init(); animate();
    </script>
</body>
</html>
